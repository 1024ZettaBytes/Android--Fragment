<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context=".PrimerFragmento">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">

        <ImageView android:layout_width="match_parent"
                   android:src="@drawable/ic_android"
                   android:layout_weight="3"

                   android:layout_height="200dp"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="26dp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:text="Título"/>
        <TextView android:layout_width="match_parent"
                  android:text="IK Pegasi (o HR 8210) es un sistema estelar binario en la constelación de Pegaso. Se encuentra a una distancia de aproximadamente 150 años luz del sistema solar, y posee la luminosidad suficiente para poder ser observado a simple vista desde la Tierra. La estrella primaria (IK Pegasi A) es una estrella de secuencia principal de Clase A, que muestra pulsaciones menores de luminosidad."
                  android:layout_weight="3"
                  android:textSize="18dp"
                  android:textAlignment="center"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>